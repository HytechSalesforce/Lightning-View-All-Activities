               <div class= "header_heading">{!$label.Users}</div>
           </div>
       </div>
 
 
               <div class="addbtn">
                   <input type="button" class="pull-right add" data-toggle="modal" data-target="#myModal"></input>
                   <div class="modal fade" id="myModal" role="dialog">
                   <div class="modal-dialog" style="width:720px;">
                   <div class="modal-content">
                   <div class="modal-header header-popup">
                   <button type="button" class="close" data-dismiss="modal"></button>
                   <h4 class="modal-title "><div class="logo-popup"></div><div class= "header_heading-popup">{!$label.Add_User}</div></h4>
