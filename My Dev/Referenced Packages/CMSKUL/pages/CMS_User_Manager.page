                 <apex:form > 
            <div class="pageblock">
<apex:outputPanel id="pageblock">
    <apex:pageblock id="pbId" >
        
        <style>
   
    .popupBackground {
       
        background-color:black;
        opacity: 0.20;
        filter: alpha(opacity = 20);
    
       
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 998;
        position: absolute;
        
       
        cursor:wait;
    }
 
   
    .PopupPanel {
     
        border: solid 1px #26608B;
        background-color: white;
 
      
        left: 50%;
       
        margin-left: 55px;
        top: 50%;
        padding:10px;
        margin-top: 20px;
        z-index: 999;
        position: fixed;
       
        cursor:pointer;
    }
    .loader{
        float:left;
        margin-right:6px;
        margin-top:2px;
    }
    
</style>  
<apex:actionStatus id="fetchStatus" stopText="">
    <apex:facet name="start">
        <div>
            <div class="popupBackground" />
            <div class="PopupPanel">
               <span><b>Please Wait</b></span>
                  
                  <img src="/img/loading.gif" class="loader"/>
                

                
            </div>
        </div>
    </apex:facet>
</apex:actionStatus>
    <apex:actionFunction name="refreshPageSize" action="{!refreshPageSize}" status="fetchStatus" reRender="pbId"/>  
          <apex:pageBlockTable value="{!socialnames}" var="a" id="thepageblock"  rendered="{!!editSection}" headerclass="tableheader" columnClasses="colclass" columns="8" rowClasses="rowcls">
            <apex:column headerValue=" User"  >
            <apex:outputLink value="/{!a.id}">{!a.name}</apex:outputlink>
           </apex:column>
             <apex:column headerValue="{!$Label.webkul_cms__username}">
                   <apex:outputField value="{!a.username}"/>
             </apex:column>
             <apex:column headerValue="{!$Label.webkul_cms__profile_name}">
             <apex:outputField value="{!a.profile.name}"/>
             </apex:column>
         </apex:pageBlockTable> 
          <apex:pageBlockTable value="{!socialnames}" var="a" id="thepageblock1"  rendered="{!editSection}" headerclass="tableheader" columnClasses="colclass" columns="8" rowClasses="rowcls">
            <apex:column headerValue=" {!$Label.webkul_cms__users} ">
            <apex:outputLink value="/{!a.id}">{!a.name}</apex:outputlink>
           </apex:column>
             <apex:column headerValue="{!$Label.webkul_cms__username}">
                   <apex:inputField value="{!a.username}"/>
             </apex:column>
             <apex:column headerValue="{!$Label.webkul_cms__profile_name}">
             <apex:inputField value="{!a.profile.name}"/>
             </apex:column>
         </apex:pageBlockTable>
         
        <div class="pull-right pagin" >

             <apex:commandlink status="fetchStatus"  styleclass="prv" reRender="pageblock"  action="{!previous}"  title="Previous Page">
                   <apex:image url="{!URLFOR($Resource.webkul_cms__CMSResources,'small-icon/icon-previous-active.png')}"  rendered="{!setcon.hasprevious}"  />
             </apex:commandlink> 
                
       <apex:outputLabel value="{!setCon.pageNumber } of {!totalPages}"  styleclass="pageno"/>
                
